{
    "name": "Ferro",
    "version": "0.0.1",
    "description": "Do stuff with your keyboard. Hit ctrl-alt-space, type, (optionally hit tab and type again) and return.",
    "permissions": [
	"tabs",
	"*://*/*"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "19": "images/icon-19.png",
        "48": "images/icon-48.png"
    },
    "browser_action": {
        "default_icon": "images/icon-19.png",
        "default_title": "Ferro"
    },
    "background_page": "background.html",
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["js/browserdetect.js", "js/lib.js", "js/keycodes.js", "js/snipe.js", "js/sniperesults.js", "js/snipesettings.js", "js/shortcut-field.js", "js/page.js"],
        "run_at": "document_end"
    }],
    "update_url": "https://s3.amazonaws.com/ferro/update.xml"
}
