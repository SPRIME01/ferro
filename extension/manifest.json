{
    "name": "Ferro",
    "version": "0.0.1",
    "description": "The keyboard interface to Chrome. Hit Ctrl-Alt-Space, type, (optionally hit tab and type again) and return.",
    "homepage_url": "http://getferro.com",
    "offline_enabled": true,
    "content_security_policy": "default-src 'self'; style-src 'self' 'unsafe-inline'",
    "permissions": [
	"tabs",
	"*://*/*",
	"bookmarks",
	"chrome://favicon/",
	"management",
	"history"
    ],
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["js/content.js"],
	"css": ["css/content.css"],
        "run_at": "document_end"
    }],
    "icons": {
        "16": "images/icon-16.gif",
        "48": "images/icon-48.gif",
        "128": "images/icon-128.gif"
    },
    "background_page": "background.html",
    "options_page": "options.html"
}
